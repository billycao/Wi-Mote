<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.because.wimote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".WiMoteActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".KeyboardActivity" 
            android:label="@string/keyboard_name" android:screenOrientation="landscape">
            
        </activity>
        <activity 
            android:name=".MyPreferenceActivity" 
            android:label="@string/prefs_name">
            
        </activity>
        <activity 
            android:name=".AccelActivity" 
            android:label="@string/accel_name" android:screenOrientation="portrait">
            
        </activity>
        <activity 
            android:screenOrientation="sensor"
            android:name=".TrackpadActivity" 
            android:label="@string/trackpad_name">
            
        </activity>
    </application>

</manifest>